<div {{bind-attr class=":navbar-static-top :navbar-inverse :page-nav for_iframe:hidden"}} id="topDiv">
    <div class="navbar-header navbar-brand">
        {{#link-to "dashboard.main"}}
        <img src="./image/login/logocloudboot.png" width="163" height="47" alt="CloudBoot 云启装机平台" />
        <small>V1.5</small>
        {{/link-to}}
    </div>

    <div class="navbar-breadcrumb" style="display: inline-block;
    float: left;
    margin-left: 30px;
    height: 100px;
    overflow: hidden;">
        {{outlet "breadcrumb"}}
    </div>

    <div class="navbar-right">
        <div class="navbar-search pull-left">
            {{outlet "search"}}
        </div>
        <div class="navbar-profile pull-right logout">
            欢迎您，{{model.session.Username}} &nbsp;
            <a href="javascript:void(0);" {{action "logoutAction"}} class="io-fa icon-logoutcloudboot"><i
                    alt="注销"></i></a>
            &nbsp;&nbsp;
        </div>
    </div>
</div>

<div {{bind-attr class=":section :page-body :block :align-items-stretch for_iframe:top0"}} id="middleDiv">
    <nav class="page-body-nav block shrink content">
        {{#common/io-sidebar}}
        <ul class="nav">
            <li class="active">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-resourcepooling"></i>
                    <label>资源池管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li> {{#link-to "dashboard.device.scan.list" }}发现新设备{{/link-to}} </li>
                </ul>
            </li>
            <li class="active">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-server"></i>
                    <label>物理机管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li> {{#link-to "dashboard.device.list" "all" }}设备列表{{/link-to}} </li>

                    <li> {{#link-to "dashboard.device.new" }}录入新设备{{/link-to}} </li>
                    <li> {{#link-to "dashboard.device.list" "installing" }}正在安装的设备
                        {{#if (not-eq 0 model.installingDeviceNum)}}
                        (<span class="orange">{{model.installingDeviceNum}}</span>)
                        {{/if}}
                        {{/link-to}}
                    </li>
                    <li> {{#link-to "dashboard.device.list" "failure" }}安装失败的设备
                        {{#if (not-eq 0 model.failureDeviceNum)}}(<span class="red">{{model.failureDeviceNum}}</span>)
                        {{/if}}
                        {{/link-to}}
                    </li>

                </ul>
            </li>

            <li>
                {{#link-to "dashboard.task-info"}}<i class="io-fa icon-template"></i>作业管理{{/link-to}}
            </li>


            {{#if (eq "Yes" model.session.IsShowVmFunction)}}
            <li>
                <a href="javascript:void(0);">
                    <i class="io-fa icon-vm"></i>
                    <label>虚拟机管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li> {{#link-to "dashboard.vm.host.list" "all" }}宿主机列表{{/link-to}} </li>
                    <li> {{#link-to "dashboard.vm.list" "all" }}虚拟机列表{{/link-to}} </li>
                    {{!-- <li> {{#link-to "dashboard.vm.new" }}申请虚拟机{{/link-to}} </li> --}}
                </ul>
            </li>
            {{/if}}

            {{#if (eq "Administrator" model.session.Role)}}
            <li class="">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-networksegment"></i>
                    <label>网段管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li>
                        {{#link-to "dashboard.network.list" }}应用网段管理{{/link-to}}
                    </li>
                    <li>
                        {{#link-to "dashboard.manageNetwork.list" }}管理网段管理{{/link-to}}
                    </li>
                </ul>
            </li>

            <li class="">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-template"></i>
                    <label>模板管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li>
                        {{#link-to "dashboard.os.list" }}PXE模板管理{{/link-to}}
                    </li>
                    <li>
                        {{#link-to "dashboard.systemTpl.list" }}系统模板管理{{/link-to}}
                    </li>
                    <li> {{#link-to "dashboard.hardware.list" }}硬件配置模板管理{{/link-to}} </li>
                    <li>
                        {{#link-to "dashboard.location.list" 0 }}位置管理{{/link-to}}
                    </li>
                </ul>
            </li>
            {{/if}}
            <li class="">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-statistics"></i>
                    <label>统计报表</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    <li>{{#link-to "dashboard.report.main"}}平台数据报表{{/link-to}}</li>
                    <li>{{#link-to "dashboard.report.status"}}设备状态报表{{/link-to}}</li>
                    <li>{{#link-to "dashboard.report.install"}}装机统计报表{{/link-to}}</li>
                </ul>
            </li>

            <li class="">
                <a href="javascript:void(0);">
                    <i class="io-fa icon-manage"></i>
                    <label>系统管理</label>
                    <span class="pull-right toggle"> <i class="fa fa-caret-down"></i> </span>
                </a>
                <ul class="nav nav-sub">
                    {{#if (eq "Administrator" model.session.Role)}}
                    <li>
                        {{#link-to "dashboard.user.list"}}用户管理{{/link-to}}
                    </li>
                    {{/if}}
                    <li>
                        {{#link-to "dashboard.user.my"}}个人信息管理{{/link-to}}
                    </li>
                    <li>
                        {{#link-to "dashboard.guide"}}系统设置{{/link-to}}
                    </li>
                </ul>
            </li>

        </ul>
        {{/common/io-sidebar}}
    </nav>
    <section class="page-body-main">
        {{outlet}}
    </section>
</div>