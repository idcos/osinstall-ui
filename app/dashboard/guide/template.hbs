<div class="panel panel-default">
	<div class="panel-body">
		{{#if model.isShowStep1}}
		<h4>设置DHCP</h4>
		{{#common/io-form-validator submitForm="saveDHCPAction"}}
		<form class="form-horizontal">
			<table class="table no-border">
				<tbody>
					<tr>
						<td width="20%" align="right"><label class="required" for="StartIp">起始IP</label></td>
						<td width="80%">
							<div class="col-md-5">
								{{input id="StartIp" value=model.dhcpFormData.StartIp required=true type="text" class="form-control input-md"}}
							</div>
							<div class="col-md-6" style="margin-top: 5px;">
								<span>完整的IP格式，如：192.168.0.101</span>
							</div>
						</td>
					</tr>
					<tr>
						<td width="20%" align="right"><label class="required" for="EndIp">结束IP</label></td>
						<td width="80%">
							<div class="col-md-5">
								{{input id="EndIp" value=model.dhcpFormData.EndIp required=true type="text" class="form-control input-md"}}
							</div>
							<div class="col-md-6" style="margin-top: 5px;">
								<span>完整的IP格式，如：192.168.0.200</span>
							</div>
						</td>
					</tr>
					<tr>
						<td width="20%" align="right"><label class="required" for="Gateway">默认网关</label></td>
						<td width="80%">
							<div class="col-md-5">
								{{input id="Gateway" value=model.dhcpFormData.Gateway required=true type="text" class="form-control input-md"}}
							</div>
							<div class="col-md-6" style="margin-top: 5px;">
								<span>完整的IP格式，如：192.168.0.1</span>
							</div>
						</td>
					</tr>
					<tr>
						<td width="20%" align="right"></td>
						<td width="80%" style="padding-top: 25px;">
							<div class="col-md-1"></div>
							<button type="submit" class="btn btn-primary">提交</button>
							{{!-- <div class="col-md-10">
								<button type="submit" class="btn btn-primary">下一步</button>
								&nbsp;&nbsp;
								<button type="button" class="btn btn-default" {{action "skipStep1Action"}}>跳过此步</button>
								&nbsp;&nbsp;
								{{html-safe model.dhcpMessage}}
							</div> --}}
						</td>
					</tr>
				</tbody>
			</table>
		</form>
		{{/common/io-form-validator}}
		{{/if}}


		{{#if model.isShowStep2}}
